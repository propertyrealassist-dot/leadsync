# Server Configuration
PORT=3001
NODE_ENV=production
DB_PATH=./data/leadsync.db

# Database Configuration
# Options: 'sqlite' or 'postgres'
DB_TYPE=sqlite

# CockroachDB Connection (only used when DB_TYPE=postgres)
# Format: postgresql://username:password@host:port/database
# Get this from: https://cockroachlabs.cloud/
# Example: postgresql://leadsync:YOUR_PASSWORD@free-tier.gcp-us-central1.cockroachlabs.cloud:26257/defaultdb?sslmode=verify-full
DATABASE_URL=

# AI Provider Configuration
# Options: 'groq', 'claude', 'anthropic'
AI_PROVIDER=groq
USE_MOCK_AI=false

# API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here
GROQ_API_KEY=

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# GoHighLevel OAuth Configuration
GHL_CLIENT_ID=your_ghl_client_id_here
GHL_CLIENT_SECRET=your_ghl_client_secret_here
GHL_REDIRECT_URI=http://localhost:3001/api/ghl/auth/callback
GHL_APP_NAME=LeadSync
GHL_APP_DESCRIPTION=AI Lead Management & Conversation Automation
GHL_SNAPSHOT_URL=https://affiliates.gohighlevel.com/?fp_ref=estategen28&share=Cjp8o6E8749ZACrK76VX

# Email Configuration (Gmail)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password

# Frontend URL
FRONTEND_URL=https://yourdomain.com

# Google Calendar (Optional)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/calendar/callback

